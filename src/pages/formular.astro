---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
import Header from "../components/Header.astro";
---

<MainLayout>
  <img src="../assets/images/earth.webp" alt="earth" class="mx-auto mb-8" />
  <h2 class="text-center text-2xl font-bold mb-6">RESSOURCER OG MATERIALER</h2>

  <div class="flex justify-between max-w-4xl mx-auto">
    <!-- Retningslinier -->
    <div class="w-1/3 text-left">
      <h3 class="text-lg font-semibold text-green-700 mb-2">Retningslinier</h3>
      <div class="flex flex-col space-y-2">
        <a
          href="https://drive.google.com/file/d/136q24Z0iexgvnWk4Z_GIGAYBtV3D49l4/view"
          class="underline hover:text-gray-500">Guidelines for individuals</a
        >
        <a
          href="https://drive.google.com/file/d/1ZUIJl_EztcJmYF7GVDFN1LMPRtqM_7nM/view"
          class="underline hover:text-gray-500">Guidelines for companies</a
        >
        <a
          href="https://drive.google.com/file/d/1dDw_YexhYGTxQIKMqcLMLnyekOTkTpJ0/view"
          class="underline hover:text-gray-500">Guidelines for schools</a
        >
        <a
          href="https://drive.google.com/file/d/1MRiPX57JrppZY4gwtKeKeCc0_rZX040P/view"
          class="underline hover:text-gray-500">Guidelines for municipalities</a
        >
      </div>
    </div>

    <!-- Sådan gør du -->
    <div class="w-1/3 text-left">
      <h3 class="text-lg font-semibold text-green-700 mb-2">Sådan gør du</h3>
      <div class="flex flex-col space-y-2">
        <a
          href="https://drive.google.com/file/d/1i8rKagvbCXk4JciaEg896YUUti3bjLbU/view"
          class="underline hover:text-gray-500"
          >How to clean up your computer and Drive</a
        >
        <a
          href="https://drive.google.com/file/d/1Capnwt-idzQoVtV1jNTM2HeJnvYVNQIi/view"
          class="underline hover:text-gray-500">How to clean up your emails</a
        >
        <a
          href="https://drive.google.com/file/d/1fN0bgV8R1WAirubd_1QlSH17lYHt6eE_/view"
          class="underline hover:text-gray-500"
          >How to clean up your smartphone and tablet</a
        >
      </div>
    </div>

    <!-- Øvelser -->
    <div class="w-1/3 text-left">
      <h3 class="text-lg font-semibold text-green-700 mb-2">Øvelser</h3>
      <div class="flex flex-col space-y-2">
        <a
          href="https://docs.google.com/spreadsheets/d/1LvTHVLLRsCICSQ-FMwtqy1whl1PlQFKy/edit?usp=sharing&ouid=107038803284961691998&rtpof=true&sd=true"
          class="underline hover:text-gray-500">Participant data collection 1</a
        >
        <a
          href="https://drive.google.com/file/d/1ZUIJl_EztcJmYF7GVDFN1LMPRtqM_7nM/view"
          class="underline hover:text-gray-500">Participant data collection 2</a
        >
        <a
          href="https://drive.google.com/file/d/1MRiPX57JrppZY4gwtKeKeCc0_rZX040P/view"
          class="underline hover:text-gray-500">Marketing materials</a
        >
      </div>
    </div>
  </div>
</MainLayout>
